{
  "name": "live-preview",
  "version": "1.0.2",
  "private": true,
  "description": "Interactive Mermaid.js diagram playground with live preview",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run validate && pnpm run test && pnpm run build:prod",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "test": "pnpm run test:html && pnpm run test:ts && pnpm run test:accessibility",
    "test:html": "html-validate index.html",
    "test:ts": "pnpm run typecheck && eslint src/**/*.ts",
    "test:accessibility": "echo 'Accessibility testing via browser DevTools or Lighthouse CI'",
    "validate": "pnpm run validate:html && pnpm run validate:ts",
    "validate:html": "html-validate index.html",
    "validate:ts": "pnpm run typecheck && eslint src/**/*.ts --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write *.html src/**/*.ts *.js",
    "format:check": "prettier --check *.html src/**/*.ts *.js",
    "lint": "pnpm run lint:html && pnpm run lint:ts",
    "lint:html": "html-validate index.html",
    "lint:ts": "eslint src/**/*.ts",
    "preview": "vite preview --port 8000",
    "quality": "pnpm run lint && pnpm run test && pnpm run format"
  },
  "keywords": [
    "mermaid",
    "diagram",
    "playground",
    "editor",
    "live-preview",
    "github-pages"
  ],
  "author": "vish288",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vish288/live-preview.git"
  },
  "homepage": "https://vish288.github.io/live-preview",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "@types/d3": "^7.4.3",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.15.0",
    "html-validate": "^10.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "semantic-release": "^24.2.7",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.6.3",
    "vite": "^7.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "mermaid": "^11.10.0",
    "vue": "^3.5.19"
  }
}
